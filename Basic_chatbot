def chatbot():
    print("ğŸ¤– Chatbot: Hello! I am a simple chatbot. Type 'bye' to exit.")

    while True:
        # Take input from user
        user_input = input("You: ").lower().strip()

        # Rule-based responses
        if user_input in ["hello", "hi", "hey"]:
            print("ğŸ¤– Chatbot: Hi! How can I help you?")
        elif user_input in ["how are you", "how are you?"]:
            print("ğŸ¤– Chatbot: I'm fine, thanks! How are you?")
        elif user_input in ["bye", "goodbye", "exit"]:
            print("ğŸ¤– Chatbot: Goodbye! Have a nice day ğŸ˜Š")
            break
        elif user_input == "":
            print("ğŸ¤– Chatbot: Please say something.")
        else:
            print("ğŸ¤– Chatbot: Sorry, I don't understand that.")

# Run the chatbot
if __name__ == "__main__":
    chatbot()
